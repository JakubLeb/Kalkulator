<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="5" styleClass="calculator-pane" vgap="5" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">

    <!-- Wyświetlacz kalkulatora -->
    <TextField fx:id="display" editable="false" styleClass="display" GridPane.columnSpan="4" />

    <!-- Przyciski funkcyjne naukowe -->
    <Button onAction="#handleButtonPress" styleClass="func-button" text="x²" GridPane.rowIndex="2" />
    <Button onAction="#handleButtonPress" styleClass="func-button" text="√" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button onAction="#handleButtonPress" styleClass="func-button" text="log" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button onAction="#handleBackspace" styleClass="func-button" text="⌫" GridPane.columnIndex="3" GridPane.rowIndex="1" />

    <!-- Poprzednie przyciski funkcyjne -->
    <Button onAction="#handleButtonPress" styleClass="func-button" text="\%" GridPane.rowIndex="1" />
    <Button onAction="#handleClearAll" styleClass="func-button" text="CE" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button onAction="#handleClear" styleClass="func-button" text="C" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button onAction="#handleButtonPress" styleClass="func-button" text="÷" GridPane.columnIndex="3" GridPane.rowIndex="2" />

    <!-- Przycisk numeryczne i operacyjne -->
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="7" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="8" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="9" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button onAction="#handleButtonPress" styleClass="operation-button" text="×" GridPane.columnIndex="3" GridPane.rowIndex="3" />

    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="4" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="5" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="6" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Button onAction="#handleButtonPress" styleClass="operation-button" text="-" GridPane.columnIndex="3" GridPane.rowIndex="4" />

    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="1" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="2" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="3" GridPane.columnIndex="2" GridPane.rowIndex="5" />
    <Button onAction="#handleButtonPress" styleClass="operation-button" text="+" GridPane.columnIndex="3" GridPane.rowIndex="5" />

    <!-- Dodatkowe przyciski -->
    <Button onAction="#handleNegate" styleClass="digit-button" text="+/-" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <Button onAction="#onActionBtnDigit" styleClass="digit-button" text="0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Button onAction="#handleDecimal" styleClass="digit-button" text="." GridPane.columnIndex="2" GridPane.rowIndex="6" />
    <Button onAction="#handleEquals" styleClass="equal-button" text="=" GridPane.columnIndex="3" GridPane.rowIndex="6" />

    <!-- Kolumny -->
    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
    </columnConstraints>

    <!-- Wiersze -->
    <rowConstraints>
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
        <RowConstraints percentHeight="12.5" />
    </rowConstraints>
</GridPane>
